@model IEnumerable<EmployeeDto>
@{
    ViewData["Title"] = "Index";
}

<h1>Employee</h1>

<br />
<br />
<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>
<br />

<form asp-action="Index" method="get" class="mt-3 row justify-content-center align-items-center">

    <div calss="row col-8 offset-1">
        <div calss=" col-8">
            <input type="text" name="Search" class="form-control" placeholder="Search By Name"/>
            <div calss =" col-4">
                <input type="submit" value="Scearch" class="btn btn-success" />
            </div>
        </div>
    </div>



</form>







@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-4">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>@Html.DisplayNameFor(D => D.EmployeeType)</th>
                <th>@Html.DisplayNameFor(D => D.departments)</th>
                <th>@Html.DisplayNameFor(D => D.Gender)</th>
                <th>@Html.DisplayNameFor(D => D.Age)</th>
                <th>@Html.DisplayNameFor(D => D.IsActive)</th>
                <th>@Html.DisplayNameFor(D => D.Salary)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var emp in Model)
            {
                <tr>


                    <td>@Html.DisplayFor(e => emp.Name)</td>
                    <td>@Html.DisplayFor(e => emp.Email)</td>
                    <td>@Html.DisplayFor(e => emp.EmployeeType)</td>
                    <td>@Html.DisplayFor(e => emp.departments)</td>
                    <td>@Html.DisplayFor(e => emp.Gender)</td>
                    <td>@Html.DisplayFor(e => emp.Age)</td>
                    <td>@Html.DisplayFor(e => emp.IsActive)</td>
                    <td>@Html.DisplayFor(e => emp.Salary)</td>
                    <td>@Html.DisplayFor(e => emp.departments)</td>

                    <partial name="_ButtonsPartial" model="emp.Id" />
                </tr>
                <div class="modal fade" id="DeleteEmployee-@emp.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Employee</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <h4 class="modal-title fs-5" id="exampleModalLabel">Are You Sure You Want To Delete @emp.Name</h4>

                                ...
                            </div>
                            <div class="modal-footer">
                                <form asp-action="Delete" asp-route-EmpId="@emp.Id" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="mt-4">
                                        <input type="submit" value="Delete" class="btn btn-danger" />
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>
}
else
{


    <div class="alert alert-info mt-3">
        <h3>  No Employees Found </h3>
    </div>

}