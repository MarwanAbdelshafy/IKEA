@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SignUp" method="post">
			<input class="text" style="margin-bottom:10px" asp-for="FirstName" placeholder="FirstName" required="">
			<input class="text" style="margin-bottom:10px" asp-for="LastName" placeholder="LastName" required="">
			<input class="text" style="margin-bottom:10px" asp-for="UserName" placeholder="Username" required="">
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input class="text" style="margin-bottom:10px" type="password" asp-for="Password" required="" placeholder="Password">
			<input class="text" style="margin-bottom:10px" type="password" asp-for="ConfirnPassword" required="" placeholder="ConfirnPassword">

			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" class="checkbox" asp-for="IsAgree" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>

				<div asp-validation-summary="All"></div>

			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Do You have an Account? <a href="/Account/LogIn"> Login Now!</a></p>
	</div>
</div>